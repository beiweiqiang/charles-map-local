{
    "name": "charles-map-local",
    "displayName": "charles-map-local",
    "description": "Simplify operation in charles map local",
    "version": "0.0.4",
    "publisher": "beiweiqiang",
    "repository": {
        "url": "https://github.com/beiweiqiang/charles-map-local"
    },
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:fileExplorer"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "views": {
            "package-explorer": [
                {
                    "id": "fileExplorer",
                    "name": "File Explorer",
                    "icon": "media/dep.svg",
                    "contextualTitle": "File Explorer"
                }
            ]
        },
        "commands": [
            {
                "command": "fileExplorer.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "fileExplorer.replaceIndex",
                "title": "Replace",
                "icon": {
                    "light": "resources/dark/mark.png",
                    "dark": "resources/dark/mark.png"
                }
            },
            {
                "command": "fileExplorer.deleteFile",
                "title": "Delete"
            },
            {
                "command": "fileExplorer.addFile",
                "title": "Add file"
            },
            {
                "command": "fileExplorer.rename",
                "title": "Rename"
            },
            {
                "command": "fileExplorer.deleteDir",
                "title": "Delete"
            },
            {
                "command": "fileExplorer.addDir",
                "title": "Add folder"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "fileExplorer.refresh",
                    "when": "view == fileExplorer",
                    "group": "navigation"
                },
                {
                    "command": "fileExplorer.addDir",
                    "when": "view == fileExplorer"
                },
                {
                    "command": "fileExplorer.addFile",
                    "when": "view == fileExplorer"
                }
            ],
            "view/item/context": [
                {
                    "command": "fileExplorer.rename",
                    "when": "view == fileExplorer"
                },


                {
                    "command": "fileExplorer.replaceIndex",
                    "when": "view == fileExplorer && viewItem == file",
                    "group": "inline"
                },
                
                {
                    "command": "fileExplorer.deleteFile",
                    "when": "view == fileExplorer && viewItem == file"
                },


                
                {
                    "command": "fileExplorer.addFile",
                    "when": "view == fileExplorer && viewItem == dir"
                },
                {
                    "command": "fileExplorer.deleteDir",
                    "when": "view == fileExplorer && viewItem == dir"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "package-explorer",
                    "title": "Package Explorer",
                    "icon": "media/dep.svg"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "nodeDependencies",
                "contents": "No node dependencies found [learn more](https://www.npmjs.com/).\n[Add Dependency](command:nodeDependencies.addEntry)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mkdirp": "^0.5.2",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/rimraf": "^3.0.0",
        "@types/vscode": "^1.52.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "eslint": "^7.15.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.1.2",
        "vscode-test": "^1.4.1"
    },
    "dependencies": {
        "mkdirp": "^0.5.5",
        "rimraf": "^3.0.2"
    }
}