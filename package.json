{
    "name": "charles-map-local",
    "displayName": "charles-map-local",
    "description": "Simplify operation in charles map local",
    "version": "0.0.1",
    "publisher": "beiweiqiang",
    "repository": {
        "url": "https://github.com/beiweiqiang/charles-map-local"
    },
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:nodeDependencies",
        "onView:fileExplorer"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "views": {
            "package-explorer": [
				{
					"id": "fileExplorer",
                    "name": "File Explorer",
                    "icon": "media/dep.svg",
                    "contextualTitle": "File Explorer"
				}
			]
        },
        "commands": [
            {
                "command": "nodeDependencies.refreshEntry",
                "title": "node dep Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "nodeDependencies.addEntry",
                "title": "Add"
            },
            {
                "command": "nodeDependencies.editEntry",
                "title": "Edit",
                "icon": {
                    "light": "resources/light/edit.svg",
                    "dark": "resources/dark/edit.svg"
                }
            },
            {
                "command": "nodeDependencies.deleteEntry",
                "title": "Delete"
            },
            {
				"command": "fileExplorer.refreshFile",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
            },
            {
				"command": "fileExplorer.replaceIndex",
				"title": "Replace",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "fileExplorer.openFile",
				"title": "file explorer: Open File"
			}
        ],
        "menus": {
            "view/title": [
                {
                    "command": "nodeDependencies.refreshEntry",
                    "when": "view == nodeDependencies",
                    "group": "navigation"
                },
                {
                    "command": "nodeDependencies.addEntry",
                    "when": "view == nodeDependencies"
                }
            ],
            "view/item/context": [
                {
                    "command": "nodeDependencies.editEntry",
                    "when": "view == nodeDependencies && viewItem == dependency",
                    "group": "inline"
                },
                {
                    "command": "nodeDependencies.deleteEntry",
                    "when": "view == nodeDependencies && viewItem == dependency"
                },
                {
					"command": "fileExplorer.replaceIndex",
					"when": "view == fileExplorer && viewItem == file",
					"group": "inline"
                },
                {
					"command": "fileExplorer.refreshFile",
					"when": "view == fileExplorer && viewItem == dir",
					"group": "inline"
				}
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "package-explorer",
                    "title": "Package Explorer",
                    "icon": "media/dep.svg"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "nodeDependencies",
                "contents": "No node dependencies found [learn more](https://www.npmjs.com/).\n[Add Dependency](command:nodeDependencies.addEntry)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mkdirp": "^0.5.2",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/rimraf": "^3.0.0",
        "@types/vscode": "^1.52.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "eslint": "^7.15.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.1.2",
        "vscode-test": "^1.4.1"
    },
    "dependencies": {
        "mkdirp": "^0.5.5",
        "rimraf": "^3.0.2"
    }
}
